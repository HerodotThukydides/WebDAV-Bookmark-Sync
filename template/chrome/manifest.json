{
	"manifest_version": 2,
	"name": "%PKG.TITLE%",
	"homepage_url": "%PKG.HOMEPAGE%",
	"version": "%PKG.VERSION%",
	"description": "%PKG.DESCRIPTION%",
	"author": "%PKG.AUTHOR%",
	"icons": {
		"128": "data/img/icon_128.png",
		"48": "data/img/icon_48.png",
		"16": "data/img/icon_16.png"
	},
	"browser_action": {
		"default_icon": {
			"128": "data/img/icon_128.png",
			"48": "data/img/icon_48.png",
			"16": "data/img/icon_16.png"
		},
		"default_title": "%PKG.TITLE%"
	},
	"background": {
		"scripts": [
			"data/js/vendor/URI-1.17.0.min.js",
			"data/js/vendor/jquery-2.2.0.min.js",
			"data/js/webdav.js",
			"main.js"
		],
		"persistent": true
	},
	"permissions": [
		"bookmarks",
		"tabs",
		"storage",
		"http://*/*",
		"https://*/*"
	],
	"options_page": "options.html"
}
